# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.toml text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Archives
*.gz binary
*.tar binary
*.zip binary
*.whl binary

# Asciinema recordings
*.cast linguist-generated=true
